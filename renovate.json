{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>sanity-io/renovate-presets//ecosystem/auto",
    "github>sanity-io/renovate-presets//ecosystem/studio-v3"
  ],
  "packageRules": [
    {
      "groupName": "sanity-studio-v3-pin-override",
      "packageNames": ["sanity"],
      "depTypeList": ["dependencies", "devDependencies", "resolutions"],
      "rangeStrategy": "pin",
      "ignoreUnstable": true,
      "followTag": "dev-preview",
      "allowedVersions": "/3\\.0\\.0-dev-preview\\.[0-9]+$/",
      "schedule": ["at any time"]
    }
  ]
}
